---
import Layout from '../layouts/Layout.astro';
import { AlertTriangle, Home } from 'lucide-react';
---

<Layout title="404 - Señal Perdida">
  <main class="min-h-screen w-full flex flex-col items-center justify-center bg-cyber-black relative overflow-hidden text-center px-4">
    
    {/* Fondos decorativos */}
    <div class="absolute top-0 left-0 w-full h-full bg-[url('/grid-bg.png')] opacity-20 pointer-events-none"></div>
    <div class="absolute top-20 left-20 w-72 h-72 bg-neon-blue/10 rounded-full blur-[100px] animate-pulse"></div>
    <div class="absolute bottom-20 right-20 w-96 h-96 bg-neon-purple/10 rounded-full blur-[100px]"></div>

    {/* Contenedor del Error */}
    <div class="z-10 bg-cyber-gray/50 backdrop-blur-md border border-white/10 p-12 rounded-2xl shadow-[0_0_50px_rgba(0,0,0,0.5)] max-w-lg w-full relative group">
      
      {/* Borde brillante al hacer hover */}
      <div class="absolute inset-0 border border-neon-blue/0 group-hover:border-neon-blue/50 rounded-2xl transition-all duration-500"></div>

      {/* Icono animado */}
      <div class="mb-6 flex justify-center">
        <div class="relative">
            <div class="absolute inset-0 bg-red-500 blur-xl opacity-20 animate-ping"></div>
            <AlertTriangle size={64} className="text-red-500 relative z-10" />
        </div>
      </div>

      {/* Título Glitch */}
      <h1 class="text-8xl font-black text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-purple-600 mb-2 font-mono tracking-tighter">
        404
      </h1>

      <h2 class="text-xl text-white font-bold mb-4 uppercase tracking-[0.2em]">
        Error de Navegación
      </h2>

      <p class="text-gray-400 mb-8 font-mono text-sm">
        :: SYSTEM_ALERT ::<br/>
        Las coordenadas solicitadas no existen en este sector.<br/>
        La ruta ha sido interceptada o eliminada.
      </p>

      {/* Botón de Regreso */}
      <a 
        href="/" 
        class="inline-flex items-center gap-2 bg-neon-blue hover:bg-cyan-400 text-cyber-black font-bold py-3 px-8 rounded-lg shadow-[0_0_20px_rgba(0,243,255,0.4)] transition-all transform hover:scale-105"
      >
        <Home size={20} />
        REGRESAR AL SISTEMA
      </a>
    </div>

    {/* Footer decorativo */}
    <div class="absolute bottom-8 text-gray-600 font-mono text-xs">
      ERROR_CODE: 0x404_NOT_FOUND // NEXUS_ERP
    </div>

  </main>
</Layout>